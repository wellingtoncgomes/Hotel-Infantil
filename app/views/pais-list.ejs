<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles/estilo.css">
    <title>Lista de Pais</title>
</head>
<body>

  <h1>Cadastrar Novos Pais</h1>
<form action="/pais/cadastrar" method="POST">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" id="nome" name="nome" required>
  </div>

  <div class="form-group">
    <label for="cpf">CPF</label>
    <input type="text" id="cpf" name="cpf" required>
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required>
  </div>

  <div class="form-group">
    <label for="telefone">Telefone</label>
    <input type="tel" id="telefone" name="telefone" required>
  </div>

  <button type="submit">Cadastrar</button><br> <br>

  <button style="background-color: blue; color: white; text-align: center; width: 180px; height: 40px; " onclick="window.location.href='https://localhost:443'"> Voltar </button> <br><br>

  
</form>




<h1>Lista de Pais</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Nome</th>
    <th>Email</th>
    <th>Telefone</th>
    <th>Ações</th> <!-- Coluna para os botões -->
  </tr>
  <% pais.forEach(pai => { %>
    <tr>
      <td><%= pai.id_pai %></td>
      <td><%= pai.nome %></td>
      <td><%= pai.email %></td>
      <td><%= pai.telefone %></td>
      <td>
        <!-- Botão de excluir -->
        <form action="/pais/delete/<%= pai.id_pai %>" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir?');">
          <input type="hidden" name="_method" value="DELETE" /> <!-- Simula um método DELETE -->
          <button type="submit">Excluir</button>
        </form>
      
        <!-- Botão de editar -->
         <form>
        <a href="/pais/edit/<%= pai.id_pai %>">
          <button type="button">Editar</button>
        </a></form>
      </td>
    </tr>
  <% }); %>
</table>

</body>
</html>
